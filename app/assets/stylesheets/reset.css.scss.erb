@import "mixin";

*{
	margin:0;
	padding:0;
}

body{
	background:#666;
	font-family:Helvetica;
	font-size:12px;

}

a{
	color:#333;
}

ul,ol{
	list-style:none;
	padding:0;
	margin:0;
}

.padded{
	padding:20px  0px;
	&.bordered{
		border-top:1px solid #ccc;
	}
}

.fleft{float:left;}

.acenter{ text-align:center;}
img.avatar{
	width:33px;
	height:33px;
	display:block;
	background:#333;
	@include rounded(3px);
}

.tableview{
	background:#fff;
	margin:15px;
	border:1px solid #ccc;
	@include rounded(4px);
	@include box-shadow(0,0,3px,rgba(0,0,0,0.15));
	li{
		border-bottom:1px solid #ccc;
		padding:15px;
		overflow:hidden;
		&:last-child{
			border-bottom:0;
		}
		img{
			margin:0 10px 0 0;
		}
		&.smallhead{
			padding:5px;
			background:#333;
			color:#fff;

		}
	}
}


.hide{
	display:none;
}

.membership{
	li{
		p{
			font-weight:bold;
			font-size:14px;
			margin: 10px 0 3px;
			float:left;
		}
		.action{
			float:right;
			border:1px solid #ccc;
			@include rounded(3px);
			margin:2px 0 0;
			a{
				padding: 6px 3px;
				display:inline-block;
				&:first-child{
					border-right:1px solid #ccc;
				}
			}
		}
	}
}








