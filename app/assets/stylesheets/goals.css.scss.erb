@import "mixin";

#wrapper{
	width:100%;
	margin:0 auto;
	min-width:320px;
}


#topbar{
	background:#000;
	padding:10px 10px;
	text-align:center;
	font-family:bebas;
	font-size:20px;
	text-decoration:uppercase;
	color:#fff;
}




.newgoal{
	text-align:center;
	position:relative;
	textarea{
		height:100px;
		width:95%;
		margin:0 auto;
		border:1px solid #ccc;
		@include rounded(3px);
		text-align:left;
		font-size:20px;
		padding:15px;
		font-family:Helvetica;
	}

	&:before{
		border-bottom: 10px solid #51D8EB;
		border-left: 10px solid transparent;
		border-right: 10px solid transparent;
		bottom: 80px;
		content: "";
		left: 50%;
		margin-left: -5px;
		position: absolute;
    }
}

.seegoal{
	text-align:center;
	.btn{
		display:block;
		em{
			background:#333 url(<%= asset_path('pin.png') %>) no-repeat  0px center;
			display:block;
			width:24px;
			height:32px;
			float:left;
			margin:-4px 0 0 ;
		}
	}
 }

