@import "mixin";

#wrapper{
	width:320px;
	margin:30px auto;
	height:480px;
	background:#F3F3F3;
	position:relative;
	@include rounded(4px);
	@include box-shadow(0,3px,6px,#111);
 }






 #landing{
 	height:480px;
 	background:#000 url(<%= asset_path('logo.png') %>) no-repeat center;
 	position:absolute;
 	width:320px;
 	z-index:8;
 	top:0;
 	opacity:1;
 	&.goup{

 	}
 }

.container{
	height:433px;
	overflow:auto;
}

#topbar{
	background:#000;
	padding:7px 10px;
	text-align:center;
	font-family:bebas-neue;
	font-weight:400;
	font-style:normal;
	text-transform:uppercase;
	font-size:24px;
	letter-spacing:1px;
	text-decoration:uppercase;
	color:#fff;
	@include rounded(3px 3px 0 0);
	a{
		color:#fff;
		text-decoration:none;
	}
}
.location{
	margin:0 14px;
	height:25px;
}
.locationwrap{
	float:left;
	width:180px;
	text-align:left;
	margin:0 10px 0 0;
}
a#showdropdown{
	float:right;
	padding:5px 0;
}
.droplocation select{
	width:200px;
}


.newgoal{
	text-align:center;
	position:relative;
	overflow:hidden;
	height:222px;
	textarea{
		height:70px;
		width:260px;
		margin:0 auto 10px;
		border:1px solid #aaa;
		@include rounded(3px);
		text-align:left;
		font-size:18px;
		padding:15px;
		font-family:Helvetica;
		@include box-shadow-inset(0,2px,2px,rgba(0,0,0,0.20));
	}
	input#location-text{
		border:0;
		background:url(<%= asset_path("pinsmall.png") %>) no-repeat 2px 7px transparent;
		padding:5px 0 5px 11px;
		font-size:12px;
		margin-bottom:10px;
	}


}

.seegoal{
	text-align:left;
	.btn{
		display:block;
		em{
			background:#333 url(<%= asset_path('pin.png') %>) no-repeat  0px center;
			display:block;
			width:24px;
			height:32px;
			float:left;
			margin:-3px 10px 0 0;
		}
	}
 }

 .login{


 }

.goalsinfo{
	h3{
		font-size:16px;
		font-weight:normal;
		margin:10px 15px;
		border:1px solid #ccc;
		@include rounded(3px);
		padding:15px;
	}
}

 	p{
 		&.addinvite{
 			background:url(<%= asset_path('addinvite.png') %>) no-repeat center left;
 		margin:0 0 0 20px;
 		padding:10px 0 10px 35px;

 		}
 		&.created{
 			background:url(<%= asset_path('created.png') %>) no-repeat center left;
 		margin:0 0 0 20px;
 		padding:10px 0 10px 35px;

 		}
 	}



.usertop{
	padding:20px 20px 10px;
}
