@import "mixin";

#wrapper{
	width:320px;
	margin:30px auto;
	height:480px;
	background:#F3F3F3;
	@include rounded(4px);
	@include box-shadow(0,3px,6px,#111);
 }


#topbar{
	background:#000;
	padding:10px 10px;
	text-align:center;
	font-family:bebas;
	font-size:20px;
	text-decoration:uppercase;
	color:#fff;
	@include rounded(3px 3px 0 0);
	a{
		color:#fff;
		text-decoration:none;
	}
}




.newgoal{
	text-align:center;
	position:relative;
	textarea{
		height:100px;
		width:270px;
		margin:0 auto;
		border:1px solid #aaa;
		@include rounded(3px);
		text-align:left;
		font-size:20px;
		padding:15px;
		font-family:Helvetica;
		@include box-shadow-inset(0,2px,2px,rgba(0,0,0,0.20));
	}

	&:before{
		border-bottom: 10px solid #51D8EB;
		border-left: 10px solid transparent;
		border-right: 10px solid transparent;
		bottom: 80px;
		content: "";
		left: 50%;
		margin-left: -5px;
		position: absolute;
    }
}

.seegoal{
	text-align:center;
	.btn{
		display:block;
		em{
			background:#333 url(<%= asset_path('pin.png') %>) no-repeat  0px center;
			display:block;
			width:24px;
			height:32px;
			float:left;
			margin:-4px 0 0 ;
		}
	}
 }

