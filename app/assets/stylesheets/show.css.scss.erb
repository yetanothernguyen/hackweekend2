@import "mixin";

.goaltop{
	background:#51D8EB;
	.title{
		font-family: museo;
		font-size: 17px;
		font-style: normal;
		font-weight: 300;
		margin: 0;
		overflow:hidden;
		padding:15px 20px;
		background:#45BDCF;
		a img{
			float:left;
			margin:0 10px 0 0;
		}
	}
	.members{
			padding:10px 20px;

		li{
			display:inline-table;
			margin:0 4px 0 0;
			&:last-child{
				margin:0;
			}
		}
	}
}


.interaction{
 	.conversation{
		float:left;
		width:200px;
		margin: 0 0 0 10px;
	}
}

.addstatus{
	width:270px;
	height:132px;
	background:#fff;
	overflow:hidden;
	position:absolute;
	top:-160px;
	left:15px;
	padding:10px;
	@include rounded(4px);
	@include box-shadow(0,2px,20px,rgba(0,0,0,0.6));
	textarea{
		width:258px;
		height:60px;
		@include rounded(3px);
		border:1px solid #aaa;
		@include box-shadow-inset(0,1px,1px,rgba(0,0,0,0.20));
		padding: 5px;
		font-family:Helvetica;

	}
	input.btn[type="submit"] {
		width:270px;

	}
}
#addstatuslink{
    background: none repeat scroll 0 0 #333;
    float: right;
    padding: 6px 6px 4px;
    position: absolute;
    right: 10px;
    top: 10px;
    width: 21px;
    cursor:pointer;
    @include rounded(3px);
    @include gradient(#444,#222);
}
