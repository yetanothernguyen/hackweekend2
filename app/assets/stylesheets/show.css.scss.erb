@import "mixin";

.goaltop{
	background:#51D8EB;
	padding:20px;
	.title{
		font-family: museo;
		font-size: 17px;
		font-style: normal;
		font-weight: 300;
		margin: 0 0 10px;
	}
	.members{
		li{
			display:inline-table;
			margin:0 4px 0 0;
			&:last-child{
				margin:0;
			}
		}
	}
}


.interaction{
 	.conversation{
		float:left;
		width:200px;
		margin: 0 0 0 10px;
	}
}

.addstatus{
	width:270px;
	height:132px;
	background:#fff;
	overflow:hidden;
	position:absolute;
	top:-160px;
	left:15px;
	padding:10px;
	@include rounded(4px);
	@include box-shadow(0,2px,20px,rgba(0,0,0,0.6));
	textarea{
		width:258px;
		height:60px;
		@include rounded(3px);
		border:1px solid #aaa;
		@include box-shadow-inset(0,1px,1px,rgba(0,0,0,0.20));
		padding: 5px;
		font-family:Helvetica;

	}
	input.btn[type="submit"] {
		width:270px;

	}
}
