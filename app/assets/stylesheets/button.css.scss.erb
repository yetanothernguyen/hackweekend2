@import "mixin";

	.btn{
		border:0;
		background-color:#51D8EB;
		@include rounded(4px);
		padding:10px 10px;
		width:270px;
		margin:10px auto;
		font-size:23px;
		font-family:bebas-neue;
		font-weight:400;
		font-style:regular;
		color:000;
		text-decoration:none;
		display:block;
		-webkit-appearance:none;
		&.black{
			background:#333;
			color:#fff;
		}
		&.arrow{
			background-image: url(<%= asset_path('arrow.png') %>);
			background-repeat:no-repeat;
			background-position: 265px center;

		}
		span{
			display:block;
			text-indent:-9999px;
			&.twitter{
				background:url(<%= asset_path('twitter.png') %>) no-repeat;
				height:28px;
				width:140px;
			}
			&.facebook{
				background:url(<%= asset_path('facebook.png') %>) no-repeat;
				height:28px;
				width:140px;
			}
		}
	}

	input[type="submit"].btn{
		width:290px;
	}